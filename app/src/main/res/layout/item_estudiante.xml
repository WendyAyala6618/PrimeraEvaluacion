<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/lblcontador"
            android:layout_width="27dp"
            android:layout_height="61dp"
            android:gravity="center"
            android:text="TextView"
            android:textSize="25sp"
            tools:text="1" />

        <TextView
            android:id="@+id/lblNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/lblcontador"
            android:text="TextView"
            android:textSize="15sp"
            android:paddingLeft="5dp"
            tools:text="Nombre" />

        <TextView
            android:id="@+id/lblCodigo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblNombre"
            android:layout_toEndOf="@+id/lblcontador"
            android:text="TextView"
            android:textSize="15sp"
            android:paddingLeft="5dp"
            tools:text="Codigo" />

        <TextView
            android:id="@+id/lblmateria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/lblcontador"
            android:layout_toEndOf="@+id/lblcontador"
            android:text="TextView"
            android:paddingLeft="5dp"
            android:textSize="15sp"
            tools:text="Materia" />

        <TextView
            android:id="@+id/lblnota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="9"
            android:layout_alignBottom="@+id/lblcontador"
            android:layout_toEndOf="@+id/lblmateria"/>


    </RelativeLayout>

</LinearLayout>
